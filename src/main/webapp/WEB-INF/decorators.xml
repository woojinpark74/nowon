<?xml version="1.0" encoding="UTF-8"?>

<decorators>
	<!-- web -->
    <decorator name="webDefaultTheme" page="/WEB-INF/jsp/web/layout/defaultTheme.jsp">
        <pattern>/web/*</pattern>
    </decorator>

	<decorator name="webEgovSampleTheme" page="/WEB-INF/jsp/web/layout/egovSampleTheme.jsp">
        <pattern>/web/egov*</pattern>
    </decorator>
    
    <decorator name="blankTheme" page="/WEB-INF/jsp/web/layout/blankTheme.jsp">
        <pattern>/modal/*.do</pattern>
    </decorator>
    
    <decorator name="popUpTheme" page="/WEB-INF/jsp/web/layout/popUpTheme.jsp">
        <pattern>/*/*Popup.do</pattern> 
    </decorator>
    
    <!-- webadm -->
    <decorator name="webadmDefaultTheme" page="/WEB-INF/jsp/webadm/layout/defaultTheme.jsp">
        <pattern>/webadm/*</pattern>
    </decorator>
    
    <!-- sitemesh 적용 예외 URL을 아래에 추가해 주세요. -->
    <excludes>
        <pattern>*Ajax*</pattern>
        <pattern>*.json</pattern>
    </excludes>
    
</decorators>